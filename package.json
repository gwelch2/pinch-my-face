{
  "name": "pinch-my-face",
  "version": "1.0.0",
  "description": "Use RxJS and Node to create a simple game to upload and play your face photo",
  "author": "Matt CP Chen",
  "license": "ISC",
  "main": "dist/server.js",
  "engines": {
    "node": "4.3.0",
    "npm": "2.14.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mattcpchen/pinch-my-face.git"
  },
  "scripts": {
    "dev:client": "NODE_ENV=devForClient node server",
    "dev:server": "NODE_ENV=devForServer nodemon server",
    "dev": "NODE_ENV=development nodemon server",
    "build": "NODE_ENV=production npm run webpack:build",
    "start": "NODE_ENV=production node dist/server.js",
    "build:start": "npm run build && npm run start",

    "predev:client": "npm run clean-dist",
    "predev:server": "npm run clean-dist && NODE_ENV=devForServer npm run webpack:build",
    "predev": "npm run clean-dist",
    "clean-dist": "rimraf dist",
    "webpack:dev": "webpack-dev-server --progress",
    "webpack:build": "webpack -p --progress --colors",
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "firebase": "^3.6.1",
    "json-loader": "^0.5.4",
    "method-override": "^2.3.6",
    "rxjs": "^5.0.0-rc.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "~6.7.*",
    "babel-loader": "~6.2.*",
    "babel-preset-es2015": "~6.6.*",
    "babel-preset-stage-2": "^6.18.0",
    "babel-register": "^6.18.0",
    "css-loader": "^0.25.0",
    "errorhandler": "^1.4.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "progress-bar-webpack-plugin": "^1.9.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-dev-server": "~1.14.*",
    "webpack-hot-middleware": "^2.13.1"
  }
}
